<?php
$number1=$_POST['number1'];
$number2=$_POST['number2'];
$option=$_POST['option'];

if ( $option == "add" ) {
    echo "$number1 + $number2 = ";
    echo $number1 + $number2;
}

if ( $option == "sub" ) {
    echo "$number1 - $number2 = ";
    echo $number1 - $number2;
}

if ( $option == "mul" ) {
    echo "$number1 * $number2 = ";
    echo $number1 * $number2;
}

if ( $option == "div" ) {
    echo "$number1 / $number2 = ";
    echo $number1 / $number2;
}

?>
